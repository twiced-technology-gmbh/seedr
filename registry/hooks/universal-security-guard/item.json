{
  "slug": "universal-security-guard",
  "name": "Universal Security Guard",
  "type": "hook",
  "description": "Global PreToolUse security hook that denies universally dangerous operations without auto-approving. Blocks reverse shells, privilege escalation, persistence mechanisms, credential access, data exfiltration, container escapes, library injection, and macOS-specific attacks across Bash, Write, Edit, and Read tools.",
  "compatibility": [
    "claude"
  ],
  "sourceType": "toolr",
  "author": {
    "name": "Toolr Suite",
    "url": "https://github.com/toolr-suite"
  },
  "externalUrl": "https://github.com/twiced-technology-gmbh/seedr/tree/main/registry/hooks/universal-security-guard",
  "updatedAt": "2026-02-09T00:00:00Z",
  "contents": {
    "files": [
      {
        "name": "universal-security-guard.sh",
        "type": "file"
      }
    ],
    "triggers": [
      {
        "event": "PreToolUse",
        "matcher": "Bash"
      },
      {
        "event": "PreToolUse",
        "matcher": "Write"
      },
      {
        "event": "PreToolUse",
        "matcher": "Edit"
      },
      {
        "event": "PreToolUse",
        "matcher": "Read"
      }
    ]
  },
  "targetScope": "user"
}
