{
  "name": "seedr-monorepo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "AI tools configuration seeder - part of the toolr-suite ecosystem",
  "scripts": {
    "prepare": "git config core.hooksPath .githooks",
    "prebuild": "tsx scripts/sync.ts",
    "check-descriptions": "bash scripts/check-descriptions.sh",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "compile": "tsx scripts/compile-manifest.ts",
    "sync": "tsx scripts/sync.ts"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.0",
    "eslint": "^10.0.0",
    "eslint-plugin-react-hooks": "^7.0.0",
    "eslint-plugin-react-refresh": "^0.5.0",
    "eslint-plugin-sonarjs": "^4.0.0",
    "eslint-plugin-unicorn": "^63.0.0",
    "tsx": "^4.19.0",
    "turbo": "^2.8.12",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.56.1"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "overrides": {
      "rollup": ">=4.59.0",
      "minimatch": ">=10.2.3",
      "@isaacs/brace-expansion@<=5.0.0": ">=5.0.1",
      "ajv@<6.14.0": ">=6.14.0"
    },
    "peerDependencyRules": {
      "allowAny": [
        "eslint"
      ]
    }
  }
}
